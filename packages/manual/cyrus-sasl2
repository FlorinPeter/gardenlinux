#!/usr/bin/env bash
set -Eeuo pipefail

. $(dirname $0)/.helper

# no manpage cleaning
sudo rm -f /etc/dpkg/dpkg.cfg.d/docker

sudo apt-get build-dep -y --no-install-recommends -a$ARCH $src
sudo apt-get install -y libgdbm-dev:$ARCH

apt-get source $src

sudo apt-get remove -y --purge libdb5.3-dev
cd $src-*/
patch -p1 < $srcDir/libdb.patch
dch -lgardenlinux 'remove libdb'
dch -r ''

donotmove="$(ls ..)"
DEB_BUILD_OPTIONS="no-gssapi $DEB_BUILD_OPTIONS" debuild -a$ARCH
move_package .. $donotmove
