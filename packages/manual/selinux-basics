#!/usr/bin/env bash
set -euo pipefail

. $(dirname $0)/.helper

sudo apt-get build-dep -y --no-install-recommends -a$ARCH $src
apt-get source $src

cd $src-*/
patch -p1 < $srcDir/perl.patch
dch -lgardenlinux 'moved postfix-nochroot out to separate package dependency on perl for selinux-basic'
dch -r ''

donotmove="$(ls ..)"
debuild -a$ARCH
move_package .. $donotmove
