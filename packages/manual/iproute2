#!/usr/bin/env bash
set -euo pipefail

. $(dirname $0)/.helper

sudo apt-get build-dep -y --no-install-recommends -a$ARCH $src
apt-get source $src

sudo apt-get remove -y --purge libdb5.3-dev:$ARCH
cd $src-*/
patch -p1 < $srcDir/libdb.patch
dch -lgardenlinux 'remove arpd/libdb'
dch -r ''

donotmove="$(ls ..)"
debuild -a$ARCH
move_package .. $donotmove
