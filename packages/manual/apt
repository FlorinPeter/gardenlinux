#!/usr/bin/env bash
set -Eexuo pipefail

. $(dirname $0)/.helper

apt-get source $src

cd $src-*/

install_build_deps

patch -p1 < /$srcDir/libdb.patch
dch -lgardenlinux 'remove ftparchive/libdb'
dch -r ''
cd . # this is needed, because for whatever reason `dch` sometimes renames the current working directory, which breaks subsequent pwd and pushd / popd

donotmove="$(ls ..)"
DEB_BUILD_OPTIONS="" build
move_package .. $donotmove
